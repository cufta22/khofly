OPEN_EXCHANGE_RATES_API_KEY = 

# Pick between OpenWeatherMap or Open Meteo
OPEN_WEATHER_URL = https://api.openweathermap.org
OPEN_WEATHER_API_KEY = 

OPEN_METEO_URL = https://api.open-meteo.com

# Optional, if yt-dlp is throwing an error like "Verify that you're not a bot"
# This can happen when you host API on the server
YT_DLP_PO_TOKEN = 

# For genius search api
GENIUS_ACCESS_TOKEN =
# How to fetch the song lyrics
# "fetch" - fetch the lyrics page and parse lyrics from html, this usually gets blocked on VPS
# "lyrics-ovh" - use lyrics.ovh API to get song lyrics, lyrics slightly different than Genius
# "worker" - use CF worker to run code similar to "fetch" option, this will hopefully avoid captcha
LYRICS_FETCH_METHOD = fetch # fetch | lyrics-ovh | worker
# For "worker" option
LYRICS_WORKER_URL = https://lyrics-worker.khofly.com

# ------------------------------------------------------------------------------------------------------------------------------------------
# Self-Host config
# ------------------------------------------------------------------------------------------------------------------------------------------

IS_SELF_HOST = 1 # 1 | 0
# URLs for web client, used in cors config
# If you want to use multiple URLs separate them with commas like:
# CORS_URLS = https://example.com, https://test.com
CORS_URLS = https://example.com  
