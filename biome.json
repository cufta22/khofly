{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },

  "organizeImports": {
    "enabled": true
  },

  "formatter": {
    "enabled": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off",
        "useImportType": "warn"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },

  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
